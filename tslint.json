{
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
	],
	"rules": {
		"object-literal-sort-keys": false,
		"member-ordering": false,
		"ordered-imports": false,
		"quotemark": [true, "single"],
		"no-unused-expression": false
	},
	"defaultSeverity": "error",
	"compilerOptions": {
		"sourceMap": true
	},
	"linterOptions": {
		"exlude": [
			"tests/*.spec.ts"
		]
	}
}